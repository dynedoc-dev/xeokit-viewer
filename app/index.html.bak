        var inspector_toggle = document.querySelector("#inspector_toggle");

        var myCanvas = document.querySelector("#myCanvas");
        var myToolbar = document.querySelector("#myToolbar");
        var myViewer  = document.querySelector("#myViewer");
        
            if(inspector_toggle.checked && explorer_toggle.checked)                 // +if(canvas.width < 700)
                inspector_toggle.click();
            else
            console.log("pas de conflit")

       /*  console.log("myCanvas width:", myCanvas) //vaut l'ancienne valeur ATTENTION 
         console.log("canvas width:", myCanvas.clientWidth) */

    }

    window.closeExplorerIfNeeded =  function (e){
        console.log("closeExplorerIfNeeded");
        var explorer = document.querySelector("#myExplorer");
        var inspector = document.querySelector("#myInspector");
        var explorer_toggle = document.querySelector("#explorer_toggle");
        var inspector_toggle = document.querySelector("#inspector_toggle");

        var myCanvas = document.querySelector("#myCanvas");
        var myToolbar = document.querySelector("#myToolbar");
        var myViewer  = document.querySelector("#myViewer");
        
            if(explorer_toggle.checked && inspector_toggle.checked)                 // +if(canvas.width < 700) !inspector toggle checked car au moment du clique value = old value
                explorer_toggle.click();
            else
                console.log("pas de conflit")

       /*  console.log("myCanvas width:", myCanvas) //vaut l'ancienne valeur ATTENTION 
         console.log("canvas width:", myCanvas.clientWidth) */

    }

    window.clickOnExplorerLabel = function (e){
        console.log("toggleExplorerCheckbox");
        var label = document.querySelector("#explorLabel");
        label.click();   

    }

    window.clickOnInspectorLabel = function (e){
        console.log("toggleExplorerCheckbox");
        var toolbar = document.querySelector(".xeokit-toolbar");

        var explorer_toggle = document.querySelector("#explorer_toggle");
        if(!explorer_toggle.checked){
            toolbar.style.maxWidth = '400px';
        }else{
            toolbar.style.maxWidth = 'none';
            toolbar.style.width = "620px"; //à corriger, la ré-extension de la toolbar ne fonctionne pas

        }

        var label = document.querySelector("#inspLabel");
        label.click();   

    }
    
    window.removedObjects = [];

</script>

